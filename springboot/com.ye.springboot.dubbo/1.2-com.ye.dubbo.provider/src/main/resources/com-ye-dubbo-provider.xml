<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="com.ye.dubbo.provider"  />

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://localhost:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />
    <!--<dubbo:protocol name="dubbo" port="29017" />-->

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service group="zero" interface="com.ye.dubbo.provider.inf.MyTest" ref="myTestService" version="1.0.0"/>

    <dubbo:service group="one" interface="com.ye.dubbo.provider.inf.MyTest" ref="myOneTestService" version="1.0.0"/>
    <!-- 和本地bean一样实现服务 -->
    <bean id="myTestService" class="com.ye.dubbo.provider.MyTestImpl" />

    <bean id="myOneTestService" class="com.ye.dubbo.provider.MyOneTestImpl" />
</beans>